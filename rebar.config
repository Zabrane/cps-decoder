{eunit_opts,
  [ verbose
  ]}.

{erl_opts,
  [ debug_info
  , warn_unused_vars
  , warn_shadow_vars
  , warn_unused_import
  , warn_obsolete_guard
  , warnings_as_errors
  ]}.

{deps,
  [
  ]}.

{xref_checks,
  [ undefined_function_calls
  , undefined_functions
  , locals_not_used
  , exports_not_used
  , deprecated_function_calls
  , deprecated_functions
  ]}.

{xref_ignores,
  [ {bench, stream, 0}
  , {bench, stream, 1}
  , {bench, test, 0}
  , {bench, test, 2}
  , {bench, test, 3}
  , {bench, test, 4}
  ]}.
